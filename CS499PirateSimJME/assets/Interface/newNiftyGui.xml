<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
  
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    
    <screen id="start" controller="PirateSim.MyStartScreen">
        <layer id="background" childLayout="center" backgroundColor="#000d">
            <!-- <image filename="Interface/tutorial/start-background.png"></image> -->
        </layer>
        <layer id="foreground" backgroundColor="#0000" childLayout="vertical">
            
            <panel id="panel_top" height="25%" width="75%" align="center" childLayout="center">  
                <text text="Somali Pirate Simulation" font="Interface/Fonts/Default.fnt" width="100%" height="100%" />
            </panel>
            
            <panel id="panel_mid" height="50%" width="75%" align="center" childLayout="center">       
                <text text="The International Maritime Bureau has commisioned a simulation to decrease 
the attacks of cargo ships by Somalian pirates in the Gulf of Aden. The attacks were carried out 
nearly daily, and something needs to be done. This simulation will be the first step to finding ways 
to avoid Somali Pirate Attacks" 
                      font="Interface/Fonts/Default.fnt" width="100%" height="100%" wrap="true" />
            </panel>
            
            <panel id="panel_bottom" height="25%" width="75%" align="center" childLayout="vertical"> 
                
                <panel id="panel_bottom_top" height="25%" width="75%" align="center" childLayout="horizontal">
                    <panel id="panel_bottom_left" height="50%" width="25%" valign="center" childLayout="center">  
                        <control name="button" label="Start" id="StartButton" align="center" valign="center" 
                                 visibleToMouse="true" > 
                            <interact onClick="startGame(hud)"/>
                        </control>
                    </panel>
                
                    <panel id="panel_bottom_mid" height="50%" width="50%" valign="center" childLayout="center">
                        <!-- <control id="dropDown2" name="dropDown" displayItems="4" /> -->
                        <panel id="simSpeedLabelPanel" width="50%" childLayout="center" align="left">
                            <control id="simSpeedLabel" name="label" text="Simulation Speed" />
                        </panel>
                    
                        <panel id="simSpeedFieldPanel" width="50%" childLayout="center" align="right">
                            <control id="simSpeedTextField" name="textfield" maxLength="20" />
                        </panel>
                    </panel>
                
                    <panel id="panel_bottom_right" height="50%" width="25%" valign="center" childLayout="center">  
                        <control name="button" label="Quit" id="QuitButton" align="center" valign="center" 
                                 visibleToMouse="true" > 
                            <interact onClick="quitGame()"/>
                        </control>
                    </panel>
                </panel>
                
                <panel id="panel_bottom_bottom" height="50%" width="100%" valign="bottom" childLayout="horizontal">  
                    
                    <panel id="panel_bottom_bottom_left" height="50%" width="33.3%" valign="bottom" childLayout="vertical">  
                        
                        <panel id="cargoSliderLabelPanel" width="100%" height="50%" childLayout="center" align="center">
                            <control id="cargoSliderLabel" name="label" text="Cargo Probability: 0.40" />
                        </panel>
                        
                        <panel id="cargoSliderPanel" width="50%" height="50%" childLayout="center" align="center">
                            <control id="cargoSlider" name="horizontalSlider" width="200px" />
                        </panel>
                        
                    </panel>
                    
                    <panel id="panel_bottom_bottom_mid" height="50%" width="33.3%" valign="bottom" childLayout="vertical">  
                        
                        <panel id="patrolSliderLabelPanel" width="100%" height="50%" childLayout="center" align="center">
                            <control id="patrolSliderLabel" name="label" text="Patrol Probability: 0.20" />
                        </panel>
                        
                        <panel id="patrolSliderPanel" width="50%" height="50%" childLayout="center" align="center">
                            <control id="patrolSlider" name="horizontalSlider" width="200px" />
                        </panel>
                        
                    </panel>
                    
                    <panel id="panel_bottom_bottom_right" height="50%" width="33.3%" valign="bottom" childLayout="vertical">  
                        
                        <panel id="pirateSliderLabelPanel" width="100%" height="50%" childLayout="center" align="center">
                            <control id="pirateSliderLabel" name="label" text="Pirate Probability:  0.25" />
                        </panel>
                        
                        <panel id="pirateSliderPanel" width="50%" height="50%" childLayout="center" align="center">
                            <control id="pirateSlider" name="horizontalSlider" width="200px" />
                        </panel>
                        
                    </panel>
                    
                </panel>
                
                
                
                
                
                
            </panel>
        </layer>
    </screen>
    
    <screen id="hud" controller="PirateSim.MyStartScreen">
        <layer id="background" childLayout="center">
            <image filename="Interface/tutorial/hud-frame.png" imageMode="resize:40,490,110,170,40,560,40,270,40,560,40,40" width="100%" height="100%"/>
        </layer>
        
        <layer id="foreground" backgroundColor="#0000" childLayout="center">
            
            <panel id="bottom_padding" width="40%" height="10%" valign="bottom" align="center"
                   childLayout="center">
                
                <panel id="sim_controls" width="100%" height="80%" align="center" valign="top"
                       childLayout="horizontal">
                    
                    <panel id="hud_panel_bottom_left" height="50%" width="50%" valign="center" childLayout="center">
                        <control name="button" label="Pause Simulation" id="PauseButton" valign="center" 
                                 visibleToMouse="true"> 
                            <interact onClick="changePauseState()"/>
                        </control>     
                    </panel>
                    
                    <panel id="panel_bottom_left" height="50%" width="50%" valign="center" childLayout="center">
                        <control name="button" label="Quit" id="hudQuit" valign="center" 
                                 visibleToMouse="true"> 
                            <interact onClick="quitGame()"/>
                        </control> 
                    </panel>
                    
                </panel>
                
            </panel>
            
        </layer>
    </screen>
    
    
    
</nifty>